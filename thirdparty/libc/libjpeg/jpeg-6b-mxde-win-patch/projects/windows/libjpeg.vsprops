<?xml version="1.0" encoding="Windows-1252"?>
<!--===============================================-->
<VisualStudioPropertySheet
	ProjectType="Visual C++"
	Version="8.00"
	Name="libjpeg"
	>
    
    <!--===============================================-->

    <UserMacro
		Name="SOURCE_ROOT_DIR"
		Value="../../../../../.."
	/>
    
    <UserMacro
		Name="SOURCE_BUILD_DIR"
		Value="$(SOURCE_ROOT_DIR)"
	/>
    
    <!--===============================================-->
    
    <UserMacro
		Name="LIBJPEG_GROUP"
		Value="libjpeg"
	/>
    <UserMacro
		Name="LIBJPEG_NAME"
		Value="jpeg"
	/>
    <UserMacro
		Name="LIBJPEG_VERSION"
		Value="6b"
	/>
    <UserMacro
		Name="LIBJPEG_DIR"
		Value="$(LIBJPEG_GROUP)/$(LIBJPEG_NAME)-$(LIBJPEG_VERSION)"
	/>
    <UserMacro
		Name="LIBJPEG_SOURCE_DIR"
		Value="$(SOURCE_ROOT_DIR)/$(LIBJPEG_DIR)"
	/>
    <UserMacro
		Name="LIBJPEG_BUILD_DIR"
		Value="$(SOURCE_BUILD_DIR)/$(LIBJPEG_DIR)"
	/>
	
    <!--===============================================-->

    <UserMacro
		Name="LIBJPEG_BUILD"
		Value="$(LIBJPEG_BUILD_DIR)/build/$(PlatformName)/$(VCVersion)/$(ConfigurationName)"
	/>
    <UserMacro
		Name="LIBJPEG_OBJ"
		Value="$(LIBJPEG_BUILD)/obj/$(ProjectName)"
	/>
    <UserMacro
		Name="LIBJPEG_LIB"
		Value="$(LIBJPEG_BUILD)/lib"
	/>
    <UserMacro
		Name="LIBJPEG_BIN"
		Value="$(LIBJPEG_BUILD)/bin"
	/>
	
    <UserMacro
		Name="LIBJPEG_INCLUDE_DIRS"
		Value="$(LIBJPEG_SOURCE_DIR)"
	/>
    <UserMacro
		Name="LIBJPEG_LIB_DIRS"
		Value="$(LIBJPEG_LIB)"
	/>
    <UserMacro
		Name="LIBJPEG_LIBS"
		Value="libjpeg.lib"
	/>
	
    <!--===============================================-->
    
    <UserMacro
		Name="BUILD_DIR"
		Value="$(LIBJPEG_BUILD)"
	/>
    <UserMacro
		Name="BUILD_OBJ"
		Value="$(LIBJPEG_OBJ)"
	/>
    <UserMacro
		Name="BUILD_LIB"
		Value="$(LIBJPEG_LIB)"
	/>
    <UserMacro
		Name="BUILD_BIN"
		Value="$(LIBJPEG_BIN)"
	/>

    <UserMacro
		Name="INCLUDE_DIRS"
		Value="$(LIBJPEG_INCLUDE_DIRS)"
	/>
    <UserMacro
		Name="LIB_DIRS"
		Value="$(LIBJPEG_LIB_DIRS)"
	/>
    <UserMacro
		Name="LIBS"
		Value="$(LIBJPEG_LIBS)"
	/>
	
</VisualStudioPropertySheet>
